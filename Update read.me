<script>
  // Year
  document.getElementById('yr').textContent = new Date().getFullYear();

  // Slideshow
  let idx = 0, timer;
  const slides = document.getElementsByClassName('slide');
  const dotsBox = document.querySelector('.dots');

  function renderDots(){
    dotsBox.innerHTML = '';
    for(let i=0;i<slides.length;i++){
      const d=document.createElement('span');
      d.className='dot'+(i===0?' active':'');
      d.onclick=()=>goTo(i);
      dotsBox.appendChild(d);
    }
  }
  function show(i){
    for (let s of slides) s.style.display='none';
    slides[i].style.display='block';
    const dots = document.getElementsByClassName('dot');
    for (let j=0;j<dots.length;j++) dots[j].classList.toggle('active', j===i);
  }
  function next(n=1){
    idx = (idx + n + slides.length) % slides.length;
    show(idx);
  }
  function goTo(n){ idx=n; show(idx); reset(); }
  function play(){ timer=setInterval(()=>next(1), 4000); }
  function reset(){ clearInterval(timer); play(); }
  function plusSlides(n){ next(n); reset(); }

  // Init
  if(slides.length){ renderDots(); show(idx); play(); }
</script>

